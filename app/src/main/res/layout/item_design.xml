<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_20sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:padding="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/productImg"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/baseline_person_24"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/productInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a brief info of product"
                    android:layout_alignBottom="@+id/productImg"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textStyle="bold"
                    android:layout_below="@+id/productInfo"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/actualPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="actual"
                    android:layout_below="@id/productInfo"
                    android:layout_toRightOf="@+id/price"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="off"
                    android:layout_below="@id/productInfo"
                    android:layout_toRightOf="@id/actualPrice"
                    android:layout_marginLeft="@dimen/_8sdp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_16sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:padding="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/productImg2"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/baseline_person_24"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/productInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a brief info of product"
                    android:layout_alignBottom="@+id/productImg2"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textStyle="bold"
                    android:layout_below="@+id/productInfo2"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/actualPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="actual"
                    android:layout_below="@id/productInfo2"
                    android:layout_toRightOf="@+id/price2"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="off"
                    android:layout_below="@id/productInfo2"
                    android:layout_toRightOf="@id/actualPrice2"
                    android:layout_marginLeft="@dimen/_8sdp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>