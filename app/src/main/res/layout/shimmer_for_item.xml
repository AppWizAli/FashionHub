<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >
            <LinearLayout
                android:id="@+id/productImgLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/productImg"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    app:cardCornerRadius="@dimen/_45sdp"
                    android:backgroundTint="@color/grey" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productImgLayout"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/productInfo"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/grey"

                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/price"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13sdp"
                        android:layout_below="@+id/productInfo"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/actualPrice"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#9e9997"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_below="@id/productInfo"
                        android:layout_toRightOf="@+id/price"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/discount"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="#f29f2f"
                        android:layout_below="@id/productInfo"
                        android:layout_toRightOf="@id/actualPrice"
                        android:layout_marginLeft="@dimen/_8sdp"/>

                </RelativeLayout>


            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/product2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >
            <LinearLayout
                android:id="@+id/productImgLayout2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/productImg2"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    app:cardCornerRadius="@dimen/_45sdp"
                    android:backgroundTint="@color/grey" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productImgLayout2"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/productInfo2"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/grey"

                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/price2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13sdp"
                        android:layout_below="@+id/productInfo2"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/actualPrice2"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#9e9997"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_below="@id/productInfo2"
                        android:layout_toRightOf="@+id/price2"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/discount2"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="#f29f2f"
                        android:layout_below="@id/productInfo2"
                        android:layout_toRightOf="@id/actualPrice2"
                        android:layout_marginLeft="@dimen/_8sdp"/>

                </RelativeLayout>


            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>